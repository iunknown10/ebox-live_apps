<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="8dp" >

    <CheckBox
        android:id="@+id/dpCheckBox"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginLeft="8dp"
        android:button="@null" 
        android:background="@drawable/dir_checkbox" />

    <com.eboxlive.ebox.image.RecyclingImageView
        android:id="@+id/dpImage"
        android:layout_width="@dimen/directory_item_width"
        android:layout_height="@dimen/directory_item_height"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/directory_item_height"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dpBiaoTi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/jianjie"
            android:textSize="@dimen/small_font_size1" />

        <TextView
            android:id="@+id/dpStartText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/kaishi"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/small_font_size3" />

        <TextView
            android:id="@+id/dpEndText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/jieshu"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/small_font_size3" />
    </LinearLayout>

</LinearLayout>